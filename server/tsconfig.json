{
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "../build/server",
    "rootDir": "./",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  }
}
